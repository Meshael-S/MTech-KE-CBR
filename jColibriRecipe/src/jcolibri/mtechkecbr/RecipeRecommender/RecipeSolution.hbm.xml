<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-lazy="false">
<class name="jcolibri.mtechkecbr.RecipeRecommender.RecipeSolution" table="recipe">
	<id name="id" column="caseId">
	</id>
	<property name="PrepDuration" column="PrepTime"/>
	<property name="CookingDuration" column="CookTime"/>
	<property name="Cuisine" column="Cuisine">
		<type name="jcolibri.connector.databaseutils.GenericUserType">
			<param name="className">jcolibri.datatypes.Instance</param>
		</type>
	</property>
	<property name="DetailedIngredients" column="Ingredients"/>
	<property name="Method" column="Method"/>
</class>

</hibernate-mapping>